
@{
    ViewBag.Title = "CuestionariosAreas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cuestionarios de áreas</h2>
<div id="Alertas"></div>
<button onclick="ModalCuestionario(0)" type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalCuestionario">Agregar</button>
<div class="accordion" id="accordion"></div>
<!-- PopUp -->
<div id="ModalCuestionario" class="modal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cuestionario</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="panel-heading ">
                    <!-- Inicia cuerpo Modal-->
                    <div class="row ">
                        <div class="col-md-4 col-sm-4 col-xs-4 justify-content-end">
                            <span class="help-block text-muted small-font">ID del Cuestionario</span>
                            <input type="text" id="TxtIDCuestionario" class="form-control limpiar" placeholder="ID" disabled="disabled" />
                        </div>
                        <div class="col-md-4 col-sm-4 col-xs-4 justify-content-end">
                            <span class="help-block text-muted small-font">No. de Cuestionario</span>
                            <input type="number" id="TxtNoCuestionario" class="form-control limpiar Cuestionario" placeholder="##" />
                        </div>
                        <div class="col-md-4 col-sm-4 col-xs-4 justify-content-end">
                            <span class="help-block text-muted small-font">No. de preguntas</span><br />
                            <input type="number" id="TxtNoPreguntas" class="form-control limpiar Cuestionario" placeholder="##" />
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 col-sm-8 col-xs-8 justify-content-end">
                            <span class="help-block text-muted small-font">Nombre</span><br />
                            <input type="text" id="TxtNombre" class="form-control limpiar Cuestionario" placeholder="Nombre" />
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Área</span>
                            <BR />
                            <select id="cmbArea" style="width: 100%" class="btn btn-danger dropdown-toggle SelectCLS Cuestionario"></select>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-4 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font"> Fecha Inicio</span>
                            <input type="date" id="TxtFInicio" class="form-control limpiar Cuestionario" placeholder="dd/mm/aa" />
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font"> Fecha Fin</span>
                            <input type="date" id="TxtFFin" class="form-control limpiar Cuestionario" placeholder="dd/mm/aa" />
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">No de Respuestas: </span>
                            <input type="number" id="TxtNoRespuestas" class="form-control limpiar Cuestionario" placeholder="##" />
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font"> Calificación maxima</span>
                            <input type="number" id="TxtCalificacion" class="form-control limpiar Cuestionario" placeholder="###" />
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <span class="help-block text-muted small-font">Autor</span>
                            <BR />
                            <select id="cmbEncargado" style="width: 100%" class="btn btn-warning dropdown-toggle SelectCLS Cuestionario"></select>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-12 col-sm-12 col-xs-12 justify-content-end">
                            <span class="help-block text-muted small-font">Sucursales</span>
                            <div id="TblPerfiles">Se inserta una tabla con los perfiles.</div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <span class="help-block text-muted small-font">Descripción</span>
                            <input type="text" id="TxtDescripcion" class="form-control limpiar Cuestionario" placeholder="Descripción" />
                        </div>
                    </div>
                    <!-- Termina cuerpo Modal content-->
                    <div class="modal-footer">
                        <button id="btnGuardar" type="button" class="btn btn-success" onclick="GuardarCuestionario()">GUARDAR</button>
                        <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">CANCELAR</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ********************************************** -->

