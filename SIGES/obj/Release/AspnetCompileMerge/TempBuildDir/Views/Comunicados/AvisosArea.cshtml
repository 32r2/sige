@using SIGES.Models;
@{
    ViewBag.Title = "Avisos por área";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/magnific-popup.css" rel="stylesheet" />
<link href="~/Content/ModalMedia.css" rel="stylesheet" />
<link href="~/Content/Switch_Button.css" rel="stylesheet" />
<h2>Avisos del área de </h2>
<div class="row">
    <div class="col-md-2 col-sm-12 col-xs-12">
        <div class="switch-button">
            <abbr id="Mensaje" title="Mostrar notificaciones inactivas.">
                <input type="checkbox" name="switch-button" id="switch-label" class="switch-button__checkbox vigentes" onChange="Mostrar()" alt="Mostrar notificaciones inactivas">
                <label for="switch-label" class="switch-button__label"></label>
            </abbr>

        </div>
    </div>
    <div class="col-md-8 col-sm-12 col-xs-12"></div>
    @{
        long IDArea = Convert.ToInt64(Session["IDArea"]);
        <div class="col-md-1 col-sm-12 col-xs-12"><button class="btn btn-primary" onclick="AModalArea(0,@IDArea)" data-toggle="modal" data-target="#ModalComunicados">Agregar<i class="fas fa-edit"></i></button></div>
    }
</div>
<br />
<div id="Notificaciones_Area" class="row el-element-overlay"></div>
<div class="modal fullscreen-modal fade" id="ModalComunicados" tabindex="-1" role="dialog" aria-labelledby="ModalComunicadoslLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="HPas-1" class="modal-title step-1 mostrar">Datos Generales</h5>
                <h5 id="HPas-2" class="modal-title step-2 ocultar">Usuarios</h5>
                <h5 id="HPas-3" class="modal-title step-3 ocultar">Recursos de media</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button><br>
            </div>
            <div class="progress">
                <div id="avance" class="progress-bar progress-bar-striped bg-success" role="progressbar" @*style="width: 0%"*@ aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            @*-----------------------------------------Paso uno---------------------------------------------------------*@
            <div id="Paso-1" class="ModAlt steps step-1 mostrar">
                <div class="container step-1 mostrar">
                    <div class="row ">
                        <div class="col-md-4 col-sm-12 col-xs-12 justify-content-end">
                            <span class="help-block text-muted small-font">ID</span>
                            <input type="text" id="TxtIDNotificacion" class="form-control limpiar bloquear" placeholder="ID" />
                        </div>
                        <div class="col-md-8 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Área</span>
                            <BR />
                            <select id="cmbArea" style="width: 100%" class="btn btn-danger dropdown-toggle Datostep-1 limpiar bloquear">
                                <option value="0">--Seleccione--</option>
                                @{
                                    if (Departamentos.IDArea != null)
                                    {
                                        for (var i = 0; i < Departamentos.IDArea.Count(); i++)
                                        {
                                            <option value="@Departamentos.IDArea[i]">@Departamentos.Nombre[i]</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <br />
                    <div class="row ">
                        <div class="col-md-12 col-sm-12 col-xs-12 justify-content-end">
                            <span class="help-block text-muted small-font">Notificación</span>
                            <input type="text" id="TxtNombre" class="form-control Datostep-1 limpiar" placeholder="Nombre" />
                        </div>
                    </div>
                    <br />
                    <div class="row ">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font"> Fecha Inicio</span>
                            <input type="date" id="TxtFInicio" class="form-control Datostep-1 limpiar" placeholder="dd/mm/aa" />
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Fecha Fin</span>
                            <input type="date" id="TxtFFin" class="form-control Datostep-1 limpiar" placeholder="dd/mm/aa" />
                        </div>
                    </div>
                    <br />
                    <div class="row ">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div>
                                <span class="help-block text-muted small-font">Descripción</span><br />
                                <textarea type="text" id="TxtDescripcion" class="form-control Datostep-1 limpiar" rows="5" wrap="soft" placeholder="Inserte una breve descripción"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*-----------------------------------------Paso dos---------------------------------------------------------*@
            <div id="Paso-2" class="ModAlt steps step-2 ocultar">
                <br />
                <div class="container step-2 ocultar">
                    <div class="row ">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div id="TblPerfiles">Espacio para los perfiles de usuarios.</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12 justify-content-end" id="alerta">
                        </div>
                    </div>
                </div>
            </div>
            @*-----------------------------------------Paso tres--------------------------------------------------------*@
            <div id="Paso-3" class="ModAlt steps step-3 ocultar">
                <div class="container step-3 ocultar">
                    <div class="row ">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <span class="help-block text-muted small-font">Recursos</span>
                            <select id="cmbRecurso" style="width: 100%" class="btn btn-success dropdown-toggle limpiar Comunicado"></select>
                        </div>
                    </div>
                    <br />
                    <div class="row ">
                        <div class="col-md-12 col-sm-12 col-xs-12 justify-content-end">
                            <img id="PBFoto" src="" width="470" height="250" alt="" class="Comunicado" />
                            <br />
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-12 col-sm-12 col-xs-12 justify-content-end" id="alertaimagen"></div>
                    </div>
                </div>
            </div>
            @*-----------------------------------------Botones del pie--------------------------------------------------*@
            <div class="modal-footer">
                <button id="BtnCancelar" type="button" class="btn btn-danger step-1 step-2 step-3" data-dismiss="modal"><i class="far fa-times-circle font-16"></i></button>
                <button id="BtnRetrocdr" type="button" class="btn btn-primary step-2 step-3" onclick="Pasos(-1)"><i class="fas fa-chevron-circle-left font-16"></i></button>
                <button id="BtnCntinuar" type="button" class="btn btn-primary step-1 step-2" onclick="Pasos(1)"><i class="fas fa-chevron-circle-right font-16"></i></button>
                <button id="BtnFinalzar" type="button" class="btn btn-success step-3" onclick="GuardarComunicado()"><i class="fas fa-check-circle font-16"></i></button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/Own/JS_System_Comunicados_Area.js"></script>
<script src="~/Scripts/jquery.magnific-popup.min.js"></script>
<script src="~/Scripts/meg.init.js"></script>
