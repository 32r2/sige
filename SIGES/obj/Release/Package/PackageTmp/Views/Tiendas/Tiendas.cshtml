
@{
    ViewBag.Title = "Tiendas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #myProgress {
        width: 100%;
        background-color: #ddd;
    }

    #myBar {
        width: 1%;
        height: 30px;
        background-color: #04AA6D;
    }

    .ModAlt {
        height: 400px;
    }

    .ocultar {
        display: none;
    }

    .mostrar {
        display: block;
    }

    .img-centro {
        margin: 10px auto 10px;
        display: block;
    }
</style>
<h2>Tiendas</h2>
<button onclick="abrirModal(0)" type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalTiendas">Agregar</button>
<div class="accordion" id="AcordeonSucursales"></div>
<!-- PopUp -->
<div class="modal fade" id="ModalTiendas" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="HPas-1" class="modal-title step-1 mostrar">Datos Principales</h5>
                <h5 id="HPas-2" class="modal-title step-2 ocultar">Datos Generales</h5>
                <h5 id="HPas-3" class="modal-title step-3 ocultar">Datos Laborales</h5>
                <h5 id="HPas-4" class="modal-title step-4 ocultar">Datos de Usuario</h5>
                <h5 id="HPas-5" class="modal-title step-5 ocultar" style="color:green">Finalizar <i class="fas fa-check-circle font-24"></i></h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button><br>
            </div>
            <div class="progress">
                <div id="avance" class="progress-bar progress-bar-striped bg-success" role="progressbar" @*style="width: 0%"*@ aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            @*-----------------------------------------Paso uno---------------------------------------------------------*@
            <div id="Paso-1" class="ModAlt steps step-1 mostrar">
                <div class="container step-1 mostrar">
                    <div class="row">
                        <div class="col-md-4 col-sm-4 col-xs-4 justify-content-end">
                            <span class="help-block text-muted small-font">ID Tienda</span><br />
                            <input type="text" id="TxtIDTienda" class="form-control limpiar" placeholder="ID" />
                        </div>
                        <div class="col-md-8 col-sm-8 col-xs-8 justify-content-end">
                            <span class="help-block text-muted small-font">Tienda</span>
                            <input type="text" id="TxtTienda" class="form-control limpiar Datostep-1" placeholder="Plus xx" />
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Estado</span>
                            <BR />
                            <select id="cmbEstado" style="width: 100%" class="btn btn-danger dropdown-toggle SelectCLS Datostep-1"></select>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Municipio</span>
                            <BR />
                            <select id="cmbMunicipio" style="width: 100%" class="btn btn-warning dropdown-toggle SelectCLS Datostep-1"></select>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Localidad</span>
                            <BR />
                            <select id="cmbLocalidad" style="width: 100%" class="btn btn-success dropdown-toggle SelectCLS Datostep-1"></select>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-12 col-sm-8 col-xs-8">
                            <span class="help-block text-muted small-font">Calle y nùmero</span>
                            <input type="text" id="TxtCalle" class="form-control limpiar" placeholder="Direccòn y No." />
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 col-sm-4 col-xs-4">
                            <span class="help-block text-muted small-font">Teléfono</span>
                            <input type="tel" id="TxtTelefono" class="form-control limpiar Datostep-1" placeholder="### ## #####" />
                        </div>
                        <div class="col-md-6 col-sm-4 col-xs-4">
                            <span class="help-block text-muted small-font">C.P.</span>
                            <input type="number" id="TxtCP" class="form-control limpiar Datostep-1" placeholder="####" />
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Latitud</span>
                            <input type="number" id="TxtLatitud" class="form-control limpiar" placeholder="##.######" />
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Longitud</span>
                            <input type="number" id="TxtLongitud" class="form-control limpiar" placeholder="##.######" />
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Hora apertura</span>
                            <input type="time" id="TxtHApertura" class="form-control limpiar" placeholder="##:##:##" />
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Hora cierre</span>
                            <input type="time" id="TxtHCierre" class="form-control limpiar" placeholder="##:##:##" />
                        </div>
                    </div>
                </div>
            </div>
            @*-----------------------------------------Paso dos---------------------------------------------------------*@
            <div id="Paso-2" class="ModAlt steps step-2 ocultar">
                <div class="container step-2 ocultar">
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-6 justify-content-end">
                            <span class="help-block text-muted small-font">Supervisión</span>
                            <select id="cmbIDSupervision" style="width: 100%" class="btn btn-danger dropdown-toggle SelectCLS"></select>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6 justify-content-end">
                            <span class="help-block text-muted small-font">Supervisor</span>
                            <select id="cmbIDSupervisor" style="width: 100%" class="btn btn-danger dropdown-toggle SelectCLS"></select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-6 justify-content-end">
                            <span class="help-block text-muted small-font">Lider</span><br />
                            <select id="cmbIDLider" style="width: 100%" class="btn btn-danger dropdown-toggle SelectCLS"></select>
                        </div>
                    </div>
                    <hr />

                    <hr />

                </div>
            </div>
            @*-----------------------------------------Paso tres--------------------------------------------------------*@
            <div id="Paso-3" class="ModAlt steps step-3 ocultar">
                <div class="container step-3 ocultar">
                    <div class="row ">
                        <div class="col-md-6 col-sm-6 col-xs-6 justify-content-end">
                            <span class="help-block text-muted small-font">Encargado 1</span><br />
                            <select id="cmbIDEncargado1" style="width: 100%" class="btn btn-danger dropdown-toggle SelectCLS"></select>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Encargado 2</span>
                            <select id="cmbIDEncargado2" style="width: 100%" class="btn btn-warning dropdown-toggle SelectCLS"></select>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 col-sm-6 col-xs-6 justify-content-end">
                            <span class="help-block text-muted small-font">Encargado 3</span><br />
                            <select id="cmbIDEncargado3" style="width: 100%" class="btn btn-success dropdown-toggle SelectCLS"></select>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6 justify-content-end">
                            <span class="help-block text-muted small-font">Auxsiliar 1</span><br />
                            <select id="cmbIDAuxsiliar1" style="width: 100%" class="btn btn-danger dropdown-toggle SelectCLS"></select>
                        </div>
                    </div>
                    <hr />
                    <div class="row ">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Auxsiliar 2</span>
                            <select id="cmbIDAuxsiliar2" style="width: 100%" class="btn btn-warning dropdown-toggle SelectCLS"></select>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6 justify-content-end">
                            <span class="help-block text-muted small-font">Auxsiliar 3</span><br />
                            <select id="cmbIDAuxsiliar3" style="width: 100%" class="btn btn-success dropdown-toggle SelectCLS"></select>
                        </div>
                    </div>
                    <br />
                    <!-- Termina cuerpo Modal content-->
                    <div class="modal-footer">
                        <button id="btnGuardar" type="button" class="btn btn-success" onclick="Guardar()">GUARDAR</button>
                        <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">CANCELAR</button>
                    </div>
                </div>
            </div>
            @*-----------------------------------------Paso cuatro------------------------------------------------------*@
            <div id="Paso-4" class="ModAlt steps step-4 ocultar">
                <div class="container step-4 ocultar">                   
                    <div id="DivDatos" class="card">
                    </div>
                </div>
            </div>
            @*-----------------------------------------Paso cinco-------------------------------------------------------*@
            <div id="Paso-5" class="ModAlt steps step-5 ocultar">
                <div class="container text-center step-5 ocultar">
                    <div class="row">
                        <div id="Finalmmessage" class="img-centro"></div>
                    </div>
                </div>
            </div>
            @*-----------------------------------------Botones del pie--------------------------------------------------*@
            <div class="modal-footer">
                <button id="BtnCancelar" type="button" class="btn btn-danger step-1 step-2 step-3 step-4 " data-dismiss="modal"><i class="far fa-times-circle font-16"></i></button>
                <button id="BtnRetrocdr" type="button" class="btn btn-primary step-2 step-3 step-4" onclick="Pasos(-1)"><i class="fas fa-chevron-circle-left font-16"></i></button>
                <button id="BtnCntinuar" type="button" class="btn btn-primary step-1 step-2 step-3 step-4" onclick="Pasos(1)"><i class="fas fa-chevron-circle-right font-16"></i></button>
                <button id="BtnFinalzar" type="button" class="btn btn-success step-5" data-dismiss="modal"><i class="fas fa-check-circle font-16"></i></button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/Own/JS_System_Sis_Tienda.js"></script>